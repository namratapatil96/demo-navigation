{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Category",
  "definitions":{
    "category":{
       "definitions":{
         "identifier": {
            "type": "string",
            "description": "Unique identifier of category. Mapping STEP-ProductInformation/Classifications/Classification/attr=ID",
            "example": "SubCategory_26224992,IE_SubCategory_17873496,CFTO_Level_1_11019042,CFTO_IE_Level_1_11019044"
          },
          "name": {
            "type": "string",
            "description": "Name of Category. Mapping STEP-ProductInformation/Classifications/Classification/Name",
            "example": "Men's Jeans"
          },
          "isActive": {
            "type": "string",
            "description": "Category published or not? If current date between SalesCategoryReleaseDate & SalesCategoryOffSaleEffectiveDate then True else False. Mapping STEP-ProductInformation/Classifications/Classification/MetaData/attr=SalesCategoryReleaseDate Mapping STEP-ProductInformation/Classifications/Classification/MetaData/attr=SalesCategoryOffSaleEffectiveDate",
            "example": "true/false"
          },
          "isPlp": {
            "type": "string",
            "description": "True : PLP page categories, False : DLP page categories",
            "example": "true/false"
          },
          "path": {
            "type": "string",
            "description": "Category SEO url, in case of IE(Ireland) appended with ie/",
            "example": "l/men/mens-jeans OR ie/l/men/mens-jeans"
          }
       } 
    },
    "seoDetails":{
      "definitions":{
        "pageSeoUrl": {
          "type": "string",
          "description": "Input URL received as part of request attribute seoURL",
          "example": "l/men/mens-jeans OR l/men/mens-jeans/fs5/black"
        },
        "bannerTitle": {
          "type": "string",
          "description": "Banner title, Mapping PIM:STEP-ProductInformation/Classifications/Classification/Name & FoundIt: Page/PageContent/H1, preference given to foundIt if available",
          "example": "Black Dresses"
        },
        "pageTitle": {
          "type": "string",
          "description": "Page title, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=SEOPageTitle & FoundIt: Page/HeadContent/Title, preference given to foundIt if available, default blank",
          "example": "Black Dresses | M&S"
        },
        "bannerEspotName": {
          "type": "string",
          "description": "Banner eSpot Name, Generated by Navigation, [identifier]_PLPBANNER",
          "example": "SubCategory_429_PLPBANNER"
        },
        "navList": {
          "type": "string",
          "description": "Category hierarchy list, Generated by Navigation based on given SEO category hierarchy",
          "example": "MSHOME::UK WEB ROOT::WOMEN[LINK]::CLOTHING::DRESSES[LINK]::"
        },
        "metaDescription": {
          "type": "string",
          "description": "Meta Description for page, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=SalesCategory_PageDescription, default blank",
          "example": "Explore our range of women’s dresses, including smart shirt styles and statement printed midis. From flowing to fitted, you’ll find your favourite at M&S"
        },
        "parentSeoUrl": {
          "type": "string",
          "description": "Parent category SEO url for requested URL",
          "example": "c/women for input l/women/dresses"
        }
       } 
    },
    "pageDetails":{
      "definitions": {
        "imageLandscape": {
          "type": "string",
          "description": "Page image orientation, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=PLPImageToLandscape",
          "default":"No",
          "enum": ["Yes", "No"]
        },
        "pageIndex": {
          "type": "string",
          "description": "Page indexing, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=isPageIndex",
          "default":"No",
          "enum": ["Yes", "No"]
        },
        "viewType": {
          "type": "string",
          "description": "Page view type, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=PLPDisplayImageType",
          "default": "MODEL",
          "enum": ["PRODUCT", "MODEL"]
        },
        "templateType": {
          "type": "string",
          "description": "Page template type, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=PLPLayout",
          "default": "NORMAL",
          "enum": ["OUTFIT", "NORMAL"]
        },
        "spotlightId": {
          "type": "string",
          "description": "Spotlight Id, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=SpotlightID",
          "example": "qgo60d"
        },
        "spotlightVersion": {
          "type": "string",
          "description": "Page Spotlight Version, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=SpotlightVersion",
          "default": "V1",
          "example": "V2"
        },
        "spotlightProductCount": {
          "type": "string",
          "description": "Page Spotlight product count, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=SpotlightVersion",
          "default":"V1=10, V2=14",
          "example": "10"
        },
        "facetSEOEnabled": {
          "type": "string",
          "description": "is Page Facet SEO Enabled, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=FacetSEOEnabled",
          "default":"Yes",
          "example": "Yes, No"
        }
      }
    },
    "breadCrumbs":{
      "definitions": {
        "position": {
          "type": "integer",
          "description": "Position of the category, staring from UK/IE-WEB-ROOT as 1",
          "example": "2-Women(L1), 3 - Dresses(L2)"
        }
      }
    },
    "metaData":{
      "definitions": {
        "contentPageSpotlightId": {
          "type": "string",
          "description": "DLP page spotlight Ids, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=ContentPageSpotlightID",
          "example": "AgXN3W, MW5l8D, LDk4oW"
        },
        "contentPageSpotlightVersion": {
          "type": "string",
          "description": "DLP page spotlight versions, Mapping PIM:STEP-ProductInformation/Classifications/Classification/MetaData/attr=ContentPageSpotlightVersion",
          "default":"V1",
          "example": "V1,V2"
        }
      }
    },
    "alternateURLs":{
      "definitions": {
        "locale": {
          "type": "string",
          "description": "Locale code of HREF url",
          "example": "en-GB, x-default, en-IE, en-DE, etc"
        },
        "alt-url": {
          "type": "string",
          "description": "HREF alternative URL appended with M&S domain",
          "example": "https://www.marksandspencer.com/l/women/dresses"
        }
      }
    },
    "foundit":{
      "definitions": {
        "CustomFields": {
          "type": "array",
          "description": "Returns the value of the custom fields that have been defined for page"
        },
        "HeadContent": {
          "type": "object",
          "description": "Represent <head> tag content on Page, such as Meta Description, Meta Keyworkds and Title "
        },
        "MetaDescription": {
          "type": "string",
          "description": "Exposes the data which should be replaced with meta description content attribute value"
        },
        "Title": {
          "type": "string",
          "description": "Represents the title tag content of a page"
        },
        "HeadInstructions": {
          "type": "object",
          "definitions": {
            "CanonicalUrl": {
              "type": "null",
              "description": "Present the URL of a page which is the canonical version of requested page"
            },
            "MetaRobots": {
              "type": "null",
              "description": ""
            }
          },
          "description": "Represents the head tag content of a page"
        },
        "H1": {
          "type": "string",
          "description": "Represents the H1 tag content of a page."
        },
        "ImageLinksEnabled": {
          "type": "boolean"
        },
        "Abstract": {
          "type": "string",
          "description": "The short text which represent the short description on the page, visible for user"
        },
        "PageOrigin": {
          "type": "string",
          "description": "Describes the type of redirect, represented by the code, which is compatible with HTTP/1.1 Protocol Status Code Definations"
        },
        "RedirectCode": {
          "type": "number",
          "description": "Describes the type of redirect, represented by the code, which is compatible with HTTP/1.1 Protocol Status Code Definations"
        },
        "RedirectTargetUrl": {
          "type": "null",
          "description": "Describes the URL target where the page is to redirect to"
        },
        "Links": {
          "type": "null"
        }
      }
    }
  },
