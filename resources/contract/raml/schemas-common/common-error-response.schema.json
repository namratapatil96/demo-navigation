{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Common Error Response in JSON",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "error": {
      "type": "string",
      "description": "Error code"
    },
    "message": {
      "type": "string",
      "description": "Error Message"
    },
    "path": {
      "type": "string"
    }
  },
  "required": [
    "message"
  ]
}